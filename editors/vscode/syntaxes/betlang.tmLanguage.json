{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Betlang",
  "scopeName": "source.betlang",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#constants" },
    { "include": "#bet-expression" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.betlang",
          "match": "//.*$"
        },
        {
          "name": "comment.block.betlang",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.betlang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.betlang",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.betlang",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.betlang",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.betlang",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.betlang",
          "match": "\\b[0-9]+\\b"
        },
        {
          "name": "constant.numeric.hex.betlang",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.betlang",
          "match": "\\b(if|then|else|match|with|for|while|do|done|in)\\b"
        },
        {
          "name": "keyword.other.betlang",
          "match": "\\b(let|fun|rec|and|type|module|open|include)\\b"
        },
        {
          "name": "keyword.special.bet.betlang",
          "match": "\\bbet\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.betlang",
          "match": "[+\\-*/]"
        },
        {
          "name": "keyword.operator.comparison.betlang",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.betlang",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.assignment.betlang",
          "match": "="
        },
        {
          "name": "keyword.operator.arrow.betlang",
          "match": "(->|<-|=>)"
        },
        {
          "name": "keyword.operator.pipe.betlang",
          "match": "\\|>"
        },
        {
          "name": "keyword.operator.weight.betlang",
          "match": "@"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.betlang",
          "match": "\\b(Int|Float|Bool|String|Ternary|List|Map|Set|Dist|Option|Result)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.distribution.betlang",
          "match": "\\b(uniform|normal|bernoulli|binomial|poisson|exponential|gamma|beta|categorical)\\b"
        },
        {
          "name": "support.function.sampling.betlang",
          "match": "\\b(sample|replicate|observe)\\b"
        },
        {
          "name": "support.function.statistics.betlang",
          "match": "\\b(mean|std|variance|median|percentile|min|max|sum)\\b"
        },
        {
          "name": "support.function.list.betlang",
          "match": "\\b(map|filter|fold|reduce|zip|concat|reverse|sort|head|tail|length)\\b"
        },
        {
          "name": "support.function.io.betlang",
          "match": "\\b(print|println|read|write)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.betlang",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.ternary.betlang",
          "match": "\\b(unknown|Unknown|True|False)\\b"
        },
        {
          "name": "constant.language.unit.betlang",
          "match": "\\(\\)"
        }
      ]
    },
    "bet-expression": {
      "patterns": [
        {
          "name": "meta.bet-expression.betlang",
          "begin": "\\bbet\\s*\\{",
          "end": "\\}",
          "beginCaptures": {
            "0": { "name": "keyword.special.bet.betlang" }
          },
          "patterns": [
            { "include": "#comments" },
            { "include": "#strings" },
            { "include": "#numbers" },
            { "include": "#operators" },
            { "include": "#constants" },
            { "include": "#functions" },
            { "include": "#identifiers" },
            {
              "name": "punctuation.separator.betlang",
              "match": ","
            }
          ]
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.betlang",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "entity.name.type.betlang",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
